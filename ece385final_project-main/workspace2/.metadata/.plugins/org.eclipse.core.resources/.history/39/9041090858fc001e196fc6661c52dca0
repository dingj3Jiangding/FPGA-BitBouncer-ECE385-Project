#include "map.h"
#include "plants.h"
#include <stdint.h>
uint8_t lawn_map[32];

void draw_map(BRAM_t* hdmi_ctrl){
	for(int i = 0; i < 32; i++){
		draw
	}
}

void set_slot(uint8_t row, uint8_t col, uint8_t plant_type, drawfunc_ptr draw_func){
	lawn_map[row*8+col].plant_type = plant_type;
	lawn_map[row*8+col].draw_func = draw_func;
}
