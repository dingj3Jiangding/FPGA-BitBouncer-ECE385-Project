#ifndef ZOMBIE_H
#define ZOMBIE_H
#include "stdint.h"
#define ZOMBIE_NORMAL 0


#define ZOMBIE_WIDTH 70
#define ZOMBIE_HEIGHT 113

#define ROWS 480
#define COLUMNS 640
typedef struct BRAM {
	uint8_t VRAM [ROWS*COLUMNS];
}BRAM_t;

typedef struct zombie {
	uint8_t type;
	uint16_t pos_x;
	uint16_t pos_y;
	uint8_t hp;
	uint8_t atk;
	uint8_t frame_num;
} zombie_t;

void draw_zombie(zombie_t* zombie_ptr, BRAM_t* hdmi_ctrl);

#endif
